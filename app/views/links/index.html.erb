<h1>Your links</h1>

<table>
  <tr>
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link.slug %></td>
      <td><%= link.target_url %></td>
      <td><%= link.created_at %></td>
    </tr>
  <% end %>
<table>
  <% if current_user && current_user.admin %>
  <%= link_to "Add New Link", "link/new", class: "btn btn-info" %>
  <%= link_to "Edit Link", "link/#{@link.id}/edit", class: "btn btn-info" %>
  <%= link_to "Link Stats", "link/show", class: "btn btn-info" %>
  <%= link_to "Delete Link", "link/#{@link.id}/destroy", {method: :delete, class: "btn btn-danger" } %>
  <% end %>
